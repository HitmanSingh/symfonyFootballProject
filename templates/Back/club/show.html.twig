{% extends 'base.html.twig' %}

{% block title %}Club{% endblock %}

{% block body %}
    <h1>Club</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ club.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ club.name }}</td>
            </tr>
            <tr>
                <th>Abbreviation</th>
                <td>{{ club.abbreviation }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ club.image }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ club.country }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ club.createdAt ? club.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ club.updatedAt ? club.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Published</th>
                <td>{{ club.published ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Archived</th>
                <td>{{ club.archived ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('club_index') }}">back to list</a>

    <a href="{{ path('club_edit', {'id': club.id}) }}">edit</a>

    {{ include('Back/club/_delete_form.html.twig') }}
{% endblock %}
