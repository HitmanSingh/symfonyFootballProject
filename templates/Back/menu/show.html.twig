{% extends 'Back/base.html.twig' %}

{% block title %}Menu{% endblock %}

{% block body %}
    <h1>Menu</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ menu.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ menu.name }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ menu.published }}</td>
            </tr>
            <tr>
                <td>Menu Items</td>
                <td>
                    {% for menu in menuItem %}
                        <a href="{{ path('menu_item_show', {'id': menu.id}) }}">{{ menu.name }}</a> <br>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('menu_index') }}">back to list</a>

    <a href="{{ path('menu_edit', {'id': menu.id}) }}">edit</a>

    {{ include('back/menu/_delete_form.html.twig') }}
{% endblock %}
