{% extends 'Back/base.html.twig' %}

{% block body %}
    <h1>Liste des matchs</h1>

    <hr>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>#</th>
                <th>Jour de match</th>
                <th>Equipe domicile</th>
                <th>Equipe exterieur</th>
                <th>Arbitre</th>
                <th>Competition</th>
                <th>Stade</th>
                <th>Saison</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for game in games %}
            <tr>
                <td>{{ game.id }}</td>
                <td>{{ game.matchday }}</td>
                <td>{{ game.teamHome }}</td>
                <td>{{ game.teamAway }}</td>
                <td>{{ game.referee }}</td>
                <td>{{ game.competition }}</td>
                <td>{{ game.stadium }}</td>
                <td>{{ game.season }}</td>

                <td>
                    <a class="btn btn-success btn-sm" href="{{ path('game_show', {'id': game.id}) }}">
                        <i class="fas fa-fw fa-eye"></i>
                        Voir
                    </a>
                    <a class="btn btn-info btn-sm" href="{{ path('game_edit', {'id': game.id}) }}">
                        <i class="fas fa-fw fa-pen"></i>
                        Modifier
                    </a>
                    {{ include('Back/game/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun match cre√© pour l'instant</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('game_new') }}">
        <i class="fas fa-fw fa-plus"></i>
        Ajouter un match
    </a>
{% endblock %}
